%doctype
%html
  %head
    %title Dummy App
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .flash
      -if flash[:notice]
        .message
          =flash[:notice]
      -if flash[:error]
        .error_message
          =flash[:error]
      -if flash[:alert]
        .alert_message
          =flash[:error]
    .container
      .row
        .span8
          = render :partial => "layouts/fassets_presentations/navbar"
          = render :partial => "layouts/fassets_presentations/editempty"
        .span4
          = yield :layout
    = yield :tray if user_signed_in?
