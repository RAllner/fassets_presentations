%h2.frametitle New Frame
=form_for [presentation, FassetsPresentations::Frame.new], :url => fassets_presentations.presentation_frames_path(presentation),:html => {:class => "collapsable_frame"} do |f|
  =render :partial => "fassets_presentations/frames/form", :object => f, :locals => {:presentation => presentation, :disable_self => false}
  =submit_tag "Create"

%div{:id => "presentations.#{presentation.id}.frames"}
  %ol{:id => "frames", :path => "presentations.#{presentation.id}.frames.sort"}
    -unless presentation.root_frame == nil
      -if wysiwyg == true
        =tree_ol(presentation.root_frame.children()) {|item| link_to h(item.title), edit_wysiwyg_presentation_frame_path(presentation, item) }
      -else
        =tree_ol(presentation.root_frame.children()) {|item| link_to h(item.title), edit_presentation_frame_path(presentation, item) }
